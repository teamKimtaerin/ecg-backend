# ===== FastAPI 설정 =====
# 애플리케이션 이름
APP_NAME=Expressive Caption Generator
# 디버그 모드 (개발: True, 운영: False)
DEBUG=False
# 비밀 키 (운영 환경에서는 반드시 변경 필요!)
SECRET_KEY=change-this-in-production

# ===== 개발환경 설정 =====
# Docker 모드 (dev: 개발, prod: 운영)
MODE=dev
# 백엔드 포트 번호
BACKEND_PORT=8000

# ===== CORS 설정 =====
# 허용할 프론트엔드 URL (쉼표로 구분)
CORS_ORIGINS=http://localhost:3000,https://d31nzc58rhgh3i.cloudfront.net

# ===== 데이터베이스 설정 (로컬 PostgreSQL) =====
# Docker Compose로 실행되는 로컬 PostgreSQL 연결 정보
DATABASE_URL=postgresql://ecg_user:ecg_password@localhost:5432/ecg_db
# PostgreSQL 사용자명
DB_USER=ecg_user
# PostgreSQL 비밀번호 (운영 환경에서는 강력한 비밀번호 사용)
DB_PASSWORD=ecg_password
# 데이터베이스 이름
DB_NAME=ecg_db
# PostgreSQL 포트 번호
DB_PORT=5432

# ===== 운영 환경용 AWS RDS 설정 =====
# 운영 배포 시 아래 주석을 해제하고 RDS 정보 입력
# DATABASE_URL=postgresql://username:password@your-rds-endpoint.amazonaws.com:5432/dbname

# ===== AWS S3 설정 =====
# AWS 액세스 키 ID (IAM 사용자의 액세스 키)
AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS 시크릿 액세스 키 (IAM 사용자의 시크릿 키)
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS 리전 (예: us-east-1, ap-northeast-2)
AWS_REGION=us-east-1
# S3 버킷 이름 (비디오 파일 저장용)
S3_BUCKET_NAME=your-s3-bucket-name
# S3 사전 서명된 URL 만료 시간 (초 단위, 기본: 3600초 = 1시간)
S3_PRESIGNED_URL_EXPIRE=3600

# ===== 모델 서버 설정 =====
# AI 모델 서버 URL (감정 분석 등 처리)
MODEL_SERVER_URL=http://your-model-server-url

# ===== API 설정 =====
# API 경로 접두사
API_PREFIX=/api/v1